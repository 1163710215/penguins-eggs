# rsync excludes file for refractasnapshot and refractasnapshot-gui
# version 9.3.4

# Exclude some system files. These are required, and you probably 
# shouldn't change them.

- /.snapshots/*
- /dev/*
- /cdrom/*
- /media/*
- /swapfile
- /mnt/*
- /sys/*
- /proc/*
- /tmp/*
- /live
- /persistence.conf

# boot
- /boot/grub/grub.cfg
- /boot/grub/menu.lst
- /boot/grub/device.map
- /boot/*.bak
- /boot/*.old-dkms
- /etc/udev/rules.d/70-persistent-cd.rules
- /etc/udev/rules.d/70-persistent-net.rules

# etc
- /etc/apt/sources.list~
- /etc/mtab
- /etc/blkid.tab
- /etc/blkid.tab.old
- /etc/crypttab
- /etc/fstab
- /etc/fstab.d/*
- /etc/dnsmasq.d/cuckoo.conf
- /etc/initramfs-tools/conf.d/resume     # see remove-cryptroot and nocrypt.sh
- /etc/initramfs-tools/conf.d/cryptroot  # see remove-cryptroot and nocrypt.sh
- /etc/machine-id
- /etc/popularity-contest.conf
- /etc/ssh/ssh_host_*_key*
- /etc/ssh/ssh_host_key*

# Added for newer version of live-config/live-boot in wheezy 
# These are only relevant here if you create a snapshot while
# you're running a live-CD or live-usb. 
- /lib/live/overlay
- /lib/live/image
- /lib/live/rootfs
- /lib/live/mount
- /run/*

# eggs remove all under home
- /home/*

# /root
- /root/.aptitude
- /root/.bash_history
- /root/.disk-manager.conf
- /root/.fstab.log
- /root/.lesshst
- /root/*/.log
- /root/.local/share/*
- /root/.nano_history
- /root/.synaptic
- /root/.VirtualBox
- /root/.ICEauthority
- /root/.Xauthority
- /root/.ssh

# Added for symlink /lib
- /usr/lib/live/overlay
- /usr/lib/live/image
- /usr/lib/live/rootfs
- /usr/lib/live/mount

# var
- /var/cache/apt/archives/*.deb
- /var/cache/apt/pkgcache.bin
- /var/cache/apt/srcpkgcache.bin
- /var/cache/apt/apt-file/*
- /var/cache/debconf/*~old
- /var/lib/apt/lists/*
- /var/lib/apt/*~
- /var/lib/apt/cdroms.list
- /var/lib/aptitude/*.old
- /var/lib/dhcp/*
- /var/lib/dpkg/*~old
- /var/spool/mail/*
- /var/mail/*
- /var/backups/*.gz
- /var/lib/dbus/machine-id
- /var/lib/live/config/*
- /usr/share/icons/*/icon-theme.cache
