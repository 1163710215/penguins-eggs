{
    "name": "penguins-eggs",
    "shortName": "eggs",
    "description": "Perri's Brewery edition: remaster your system and distribuite it",
    "version": "9.0.0",
    "author": "Piero Proietti @pieroproietti",
    "bin": {
        "eggs": "bin/run"
    },
    "homepage": "https://penguins-eggs.net/",
    "repository": "https://github.com/pieroproietti/penguins-eggs",
    "bugs": "https://github.com/pieroproietti/penguins-eggs/issues",
    "dependencies": {
        "@oclif/core": "^1.0.11",
        "@oclif/plugin-autocomplete": "1.0.0",
        "@oclif/plugin-help": "^3.2.14",
        "@oclif/plugin-not-found": "^2.2.3",
        "@oclif/plugin-warn-if-update-available": "^2.0.3",
        "@oclif/plugin-version": "^1.0.3",
        "axios": "^0.24.0",
        "chalk": "^4.1.0",
        "ink": "^3.2.0",
        "ink-big-text": "^1.2.0",
        "ink-gradient": "^2.0.0",
        "inquirer": "^8.2.0",
        "js-yaml": "^4.1.0",
        "mustache": "^4.2.0",
        "pjson": "github:pieroproietti/pjson",
        "react": "^17.0.2",
        "shelljs": "github:shelljs/shelljs",
        "tslib": "^2.3.1"
    },
    "devDependencies": {
        "@oclif/test": "^2.0.3",
        "@types/chai": "^4.3.0",
        "@types/ink-big-text": "^1.2.1",
        "@types/ink-gradient": "^2.0.1",
        "@types/inquirer": "^8.1.3",
        "@types/js-yaml": "^4.0.5",
        "@types/mocha": "^9.0.0",
        "@types/mustache": "^4.1.2",
        "@types/node": "^16.11.13",
        "@types/react": "^17.0.37",
        "@types/shelljs": "^0.8.9",
        "chai": "^4.3.4",
        "eslint": "^7.3.2",
        "eslint-config-oclif": "^4.0.0",
        "eslint-config-oclif-typescript": "^1.0.2",
        "globby": "^11.0.1",
        "mocha": "^9.1.3",
        "nyc": "^15.1.0",
        "oclif": "^2.0.1",
        "perrisbrewery": "^0.3.2",
        "prettier": "^2.5.1",
        "shx": "^0.3.3",
        "ts-node": "^10.2.1",
        "typedoc": "^0.22.10",
        "typescript": "^4.5.0"
    },
    "engines": {
        "node": ">=12.0.0"
    },
    "files": [
        "/assets",
        "/addons",
        "/assistant",
        "/bin",
        "/conf",
        "/dist",
        "/manpages",
        "/oclif.manifest.json",
        "/scripts",
        "/templates"
    ],
    "keywords": [
        "oclif",
        "refracta",
        "systemback",
        "remastersys"
    ],
    "license": "MIT",
    "main": "./dist/index.js",
    "dirname": "eggs",
    "oclif": {
        "bin": "eggs",
        "commands": "./dist/commands",
        "plugins": [
            "@oclif/plugin-autocomplete",
            "@oclif/plugin-help",
            "@oclif/plugin-not-found",
            "@oclif/plugin-warn-if-update-available",
            "@oclif/plugin-version"
        ],
        "topicSeparator": " ",
        "additionalHelpFlags": [
            "-h"
        ],
        "additionalVersionFlags": [
            "-v"
        ]
    },
    "scripts": {
        "docs": "rm docs -rf && npx typedoc src --out docs",
        "build": "tsc -p .",
        "deb": "oclif pack:deb && pb all ./",
        "tarballs": "oclif pack:tarballs --root=. --targets=linux-x64 --no-xz",
        "postpack": "rm -f oclif.manifest.json",
        "posttest": "eslint . --ext .ts --config .eslintrc",
        "prepack": "rm lib -rf && tsc -b && oclif manifest && oclif readme",
        "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
        "version": "oclif readme && git add README.md",
        "lint": "eslint . --ext .ts --config .eslintrc",
        "lint-and-fix": "eslint . --ext .ts --fix --config .eslintrc",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
    },
    "types": "dist/index.d.ts"
}